@inject PersonalJournalApp.Services.AppLockService AppLockService
@inject NavigationManager Navigation

<nav class="sidebar-nav">
    <div class="sidebar-header">
        <div class="logo">
            <svg class="logo-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
            </svg>
            <span class="logo-text">Journal</span>
        </div>
    </div>

    <div class="nav-links">
        <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
            <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 20h9"></path>
                <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
            </svg>
            <span class="nav-text">Today</span>
        </NavLink>
        
        <NavLink class="nav-link" href="calendar">
            <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
            <span class="nav-text">Calendar</span>
        </NavLink>
        
        <NavLink class="nav-link" href="timeline">
            <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
            </svg>
            <span class="nav-text">Timeline</span>
        </NavLink>
        
        <NavLink class="nav-link" href="analytics">
            <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
            </svg>
            <span class="nav-text">Analytics</span>
        </NavLink>
        
        <NavLink class="nav-link" href="settings">
            <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="3"></circle>
                <path d="M12 1v6m0 6v6m8.66-15.66l-4.24 4.24m-4.24 4.24l-4.24 4.24M23 12h-6m-6 0H1m15.66 8.66l-4.24-4.24m-4.24-4.24l-4.24-4.24"></path>
            </svg>
            <span class="nav-text">Settings</span>
        </NavLink>
    </div>

    <div class="sidebar-footer">
        @if (AppLockService.IsAppLockEnabled)
        {
            <button class="lock-button" @onclick="LockApp">
                <svg class="lock-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                    <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                </svg>
                <span>Lock App</span>
            </button>
        }
    </div>
</nav>

@code {
    private void LockApp()
    {
        if (AppLockService.IsAppLockEnabled)
        {
            AppLockService.LockApp();
            Navigation.NavigateTo("/", forceLoad: true);
        }
    }
}