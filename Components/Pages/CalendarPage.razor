@page "/calendar"

<div class="page-content">
    <div class="page-header">
        <div class="header-left">
            <h1>Calendar</h1>
            <p class="page-subtitle">View and manage your journal entries</p>
        </div>
        <div class="header-actions">
            <button class="btn btn-secondary">Jump to Date</button>
            <button class="btn btn-primary">+ New Entry</button>
        </div>
    </div>

    <div class="calendar-layout">
        <!-- Left: Calendar Grid -->
        <div class="calendar-section">
            <div class="card calendar-card">
                <!-- Calendar Header -->
                <div class="calendar-header">
                    <button class="nav-btn">‹</button>
                    <h2 class="calendar-month">December 2025</h2>
                    <button class="nav-btn">›</button>
                </div>

                <!-- Weekday Headers -->
                <div class="calendar-weekdays">
                    <div class="weekday">S</div>
                    <div class="weekday">M</div>
                    <div class="weekday">T</div>
                    <div class="weekday">W</div>
                    <div class="weekday">T</div>
                    <div class="weekday">F</div>
                    <div class="weekday">S</div>
                </div>

                <!-- Calendar Grid -->
                <div class="calendar-grid">
                    <!-- Previous Month Days -->
                    <button class="calendar-day other-month">
                        <span class="day-number">29</span>
                    </button>
                    <button class="calendar-day other-month">
                        <span class="day-number">30</span>
                    </button>

                    <!-- December Days -->
                    <button class="calendar-day has-entry">
                        <span class="day-number">1</span>
                        <span class="dot"></span>
                    </button>
                    <button class="calendar-day has-entry">
                        <span class="day-number">2</span>
                        <span class="dot"></span>
                    </button>
                    <button class="calendar-day">
                        <span class="day-number">3</span>
                    </button>
                    <button class="calendar-day has-entry">
                        <span class="day-number">4</span>
                        <span class="dot"></span>
                    </button>
                    <button class="calendar-day has-entry">
                        <span class="day-number">5</span>
                        <span class="dot"></span>
                    </button>
                    
                    <button class="calendar-day">
                        <span class="day-number">6</span>
                    </button>
                    <button class="calendar-day has-entry">
                        <span class="day-number">7</span>
                        <span class="dot"></span>
                    </button>
                    <button class="calendar-day has-entry">
                        <span class="day-number">8</span>
                        <span class="dot"></span>
                    </button>
                    <button class="calendar-day has-entry">
                        <span class="day-number">9</span>
                        <span class="dot"></span>
                    </button>
                    <button class="calendar-day">
                        <span class="day-number">10</span>
                    </button>
                    <button class="calendar-day has-entry">
                        <span class="day-number">11</span>
                        <span class="dot"></span>
                    </button>
                    <button class="calendar-day">
                        <span class="day-number">12</span>
                    </button>

                    <button class="calendar-day has-entry">
                        <span class="day-number">13</span>
                        <span class="dot"></span>
                    </button>
                    <button class="calendar-day has-entry">
                        <span class="day-number">14</span>
                        <span class="dot"></span>
                    </button>
                    <button class="calendar-day has-entry">
                        <span class="day-number">15</span>
                        <span class="dot"></span>
                    </button>
                    <button class="calendar-day has-entry">
                        <span class="day-number">16</span>
                        <span class="dot"></span>
                    </button>
                    <button class="calendar-day has-entry">
                        <span class="day-number">17</span>
                        <span class="dot"></span>
                    </button>
                    <button class="calendar-day has-entry">
                        <span class="day-number">18</span>
