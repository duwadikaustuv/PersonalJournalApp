@page "/"
@page "/today"

<div class="page-content">
    <div class="page-header">
        <div>
            <h1>Today's Entry</h1>
            <p class="page-subtitle">Saturday, December 21, 2025</p>
        </div>
        <div class="header-actions">
            <button class="btn btn-secondary">
                <span>🔒</span>
                Lock
            </button>
            <button class="btn btn-primary">
                <span>💾</span>
                Save Entry
            </button>
        </div>
    </div>

    <div class="editor-layout">
        <!-- Left: Meta Panel -->
        <aside class="meta-panel">
            <div class="card">
                <h3>Streak 🔥</h3>
                <div class="streak-display">
                    <div class="streak-number">7</div>
                    <div class="streak-label">Days</div>
                </div>
            </div>

            <div class="card">
                <h3>How are you feeling?</h3>
                <div class="mood-selector">
                    <button class="mood-btn active">
                        <span class="mood-emoji">😊</span>
                        <span class="mood-name">Happy</span>
                    </button>
                    <button class="mood-btn">
                        <span class="mood-emoji">😌</span>
                        <span class="mood-name">Calm</span>
                    </button>
                    <button class="mood-btn">
                        <span class="mood-emoji">😢</span>
                        <span class="mood-name">Sad</span>
                    </button>
                    <button class="mood-btn">
                        <span class="mood-emoji">😰</span>
                        <span class="mood-name">Anxious</span>
                    </button>
                    <button class="mood-btn">
                        <span class="mood-emoji">🤩</span>
                        <span class="mood-name">Excited</span>
                    </button>
                    <button class="mood-btn">
                        <span class="mood-emoji">😴</span>
                        <span class="mood-name">Tired</span>
                    </button>
                </div>
            </div>

            <div class="card">
                <h3>Tags</h3>
                <div class="tags-list">
                    <span class="chip chip-primary">Work</span>
                    <span class="chip chip-success">Health</span>
                    <span class="chip chip-warning">Personal</span>
                    <button class="add-tag-btn">+ Add Tag</button>
                </div>
            </div>

            <div class="card">
                <h3>Category</h3>
                <select class="input">
                    <option>Personal</option>
                    <option>Work</option>
                    <option>Travel</option>
                    <option>Goals</option>
                </select>
            </div>
        </aside>

        <!-- Right: Editor -->
        <div class="editor-panel">
            <div class="card editor-card">
                <input type="text" class="title-input" placeholder="Entry title (optional)" />
                
                <div class="editor-toolbar">
                    <button class="toolbar-btn" title="Bold">𝐁</button>
                    <button class="toolbar-btn" title="Italic">𝐼</button>
                    <button class="toolbar-btn" title="Heading">H</button>
                    <button class="toolbar-btn" title="List">≡</button>
                    <button class="toolbar-btn" title="Quote">❝</button>
                </div>

                <textarea class="content-editor" placeholder="Start writing your thoughts...">Today was a productive day! I managed to complete most of my tasks and even had time for a walk in the park. 

Feeling grateful for:
- Good health
- Supportive friends
- Progress on my goals

Looking forward to tomorrow and new opportunities.</textarea>

                <div class="editor-footer">
                    <span class="word-count">87 words • 456 characters</span>
                    <span class="save-status">✓ Saved at 10:42 PM</span>
                </div>
            </div>
        </div>
    </div>
</div>
