    border-color: var(--primary);
    background: #e0e7ff;
}

.mood-emoji {
    font-size: 2rem;
    margin-bottom: var(--space-xs);
}

.mood-name {
    font-size: 0.75rem;
    color: var(--text-secondary);
}

.tags-list {
    display: flex;
