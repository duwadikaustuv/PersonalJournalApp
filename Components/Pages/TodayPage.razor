    border-radius: 16px;
    font-size: 0.75rem;
    background: var(--bg-tertiary);
    color: var(--text-secondary);
    border: 1px dashed var(--border-color);
    transition: all 0.2s;
}

.add-tag-btn:hover {
    border-color: var(--primary);
    color: var(--primary);
