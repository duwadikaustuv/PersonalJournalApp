@page "/analytics"

<div class="page-content">
    <div class="page-header">
        <div class="header-left">
            <h1>Analytics</h1>
            <p class="page-subtitle">Insights and statistics from your journal</p>
        </div>
        <div class="header-actions">
            <select class="period-select">
                <option>Last 7 Days</option>
                <option>Last 30 Days</option>
                <option selected>Last 3 Months</option>
                <option>This Year</option>
                <option>All Time</option>
            </select>
            <button class="btn btn-primary">Export Report</button>
        </div>
    </div>

    <!-- Overview Stats -->
    <div class="stats-overview">
        <div class="stat-card">
            <div class="stat-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
            </div>
            <div class="stat-content">
                <div class="stat-value">87</div>
                <div class="stat-label">Total Entries</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17.1 14.5C17.1 17.6 14.5 19.2 12 21 9.5 19.2 6.9 17.6 6.9 14.5c0-2.4 1.5-4.4 3.6-5.2.4-3.5 4.1-5.8 4.1-5.8s3.7 2.3 4.1 5.8c2.1.8 3.6 2.8 3.6 5.2z"></path>
                </svg>
            </div>
            <div class="stat-content">
                <div class="stat-value">7</div>
                <div class="stat-label">Current Streak</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="4 17 10 11 4 5"></polyline>
                    <line x1="12" y1="19" x2="20" y2="19"></line>
                </svg>
            </div>
            <div class="stat-content">
                <div class="stat-value">124</div>
                <div class="stat-label">Avg Words/Entry</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
            </div>
            <div class="stat-content">
                <div class="stat-value">89%</div>
                <div class="stat-label">Completion Rate</div>
            </div>
        </div>
    </div>

    <!-- Charts Grid -->
    <div class="charts-grid">
        <!-- Mood Distribution -->
        <div class="card chart-card">
            <div class="chart-header">
                <h3>Mood Distribution</h3>
                <span class="chart-subtitle">Last 90 days</span>
            </div>
            <div class="chart-content">
                <div class="mood-chart">
                    <div class="mood-bar-group">
                        <div class="mood-bar-container">
                            <div class="mood-bar" style="height: 85%;" data-mood="happy"></div>
                        </div>
                        <div class="mood-label">Happy</div>
                        <div class="mood-count">42</div>
                    </div>
                    <div class="mood-bar-group">
                        <div class="mood-bar-container">
                            <div class="mood-bar" style="height: 65%;" data-mood="calm"></div>
                        </div>
                        <div class="mood-label">Calm</div>
                        <div class="mood-count">28</div>
                    </div>
                    <div class="mood-bar-group">
                        <div class="mood-bar-container">
                            <div class="mood-bar" style="height: 35%;" data-mood="excited"></div>
                        </div>
                        <div class="mood-label">Excited</div>
                        <div class="mood-count">12</div>
                    </div>
                    <div class="mood-bar-group">
                        <div class="mood-bar-container">
                            <div class="mood-bar" style="height: 20%;" data-mood="anxious"></div>
                        </div>
                        <div class="mood-label">Anxious</div>
                        <div class="mood-count">5</div>
                    </div>
                    <div class="mood-bar-group">
                        <div class="mood-bar-container">
                            <div class="mood-bar" style="height: 15%;" data-mood="sad"></div>
                        </div>
                        <div class="mood-label">Sad</div>
                        <div class="mood-count">3</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Writing Frequency -->
        <div class="card chart-card">
            <div class="chart-header">
                <h3>Writing Frequency</h3>
                <span class="chart-subtitle">Entries per week</span>
            </div>
            <div class="chart-content">
                <div class="frequency-chart">
                    <div class="frequency-bar-group">
                        <div class="frequency-bar" style="height: 95%;"></div>
                        <div class="frequency-label">Week 1</div>
                    </div>
                    <div class="frequency-bar-group">
                        <div class="frequency-bar" style="height: 100%;"></div>
                        <div class="frequency-label">Week 2</div>
                    </div>
                    <div class="frequency-bar-group">
                        <div class="frequency-bar" style="height: 85%;"></div>
                        <div class="frequency-label">Week 3</div>
                    </div>
                    <div class="frequency-bar-group">
                        <div class="frequency-bar" style="height: 90%;"></div>
                        <div class="frequency-label">Week 4</div>
                    </div>
                    <div class="frequency-bar-group">
                        <div class="frequency-bar" style="height: 80%;"></div>
                        <div class="frequency-label">Week 5</div>
                    </div>
                    <div class="frequency-bar-group">
                        <div class="frequency-bar" style="height: 100%;"></div>
                        <div class="frequency-label">Week 6</div>
                    </div>
                    <div class="frequency-bar-group">
                        <div class="frequency-bar" style="height: 95%;"></div>
                        <div class="frequency-label">Week 7</div>
                    </div>
                    <div class="frequency-bar-group">
                        <div class="frequency-bar" style="height: 100%;"></div>
                        <div class="frequency-label">Week 8</div>
                    </div>
                    <div class="frequency-bar-group">
                        <div class="frequency-bar" style="height: 90%;"></div>
                        <div class="frequency-label">Week 9</div>
                    </div>
                    <div class="frequency-bar-group">
                        <div class="frequency-bar" style="height: 100%;"></div>
                        <div class="frequency-label">Week 10</div>
                    </div>
                    <div class="frequency-bar-group">
                        <div class="frequency-bar" style="height: 85%;"></div>
                        <div class="frequency-label">Week 11</div>
                    </div>
                    <div class="frequency-bar-group">
                        <div class="frequency-bar" style="height: 100%;"></div>
                        <div class="frequency-label">Week 12</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Second Row -->
    <div class="charts-grid">
        <!-- Top Tags -->
        <div class="card chart-card">
            <div class="chart-header">
                <h3>Most Used Tags</h3>
                <span class="chart-subtitle">Top 10 tags</span>
            </div>
            <div class="chart-content">
                <div class="tags-list">
                    <div class="tag-item">
                        <div class="tag-info">
                            <span class="tag-name">Work</span>
                            <div class="tag-bar">
                                <div class="tag-bar-fill" style="width: 85%;"></div>
                            </div>
                        </div>
                        <span class="tag-count">42</span>
                    </div>
                    <div class="tag-item">
                        <div class="tag-info">
                            <span class="tag-name">Health</span>
                            <div class="tag-bar">
                                <div class="tag-bar-fill" style="width: 72%;"></div>
                            </div>
                        </div>
                        <span class="tag-count">35</span>
                    </div>
                    <div class="tag-item">
                        <div class="tag-info">
                            <span class="tag-name">Personal</span>
                            <div class="tag-bar">
                                <div class="tag-bar-fill" style="width: 68%;"></div>
                            </div>
                        </div>
                        <span class="tag-count">32</span>
                    </div>
                    <div class="tag-item">
                        <div class="tag-info">
                            <span class="tag-name">Goals</span>
                            <div class="tag-bar">
                                <div class="tag-bar-fill" style="width: 55%;"></div>
                            </div>
                        </div>
                        <span class="tag-count">26</span>
                    </div>
                    <div class="tag-item">
                        <div class="tag-info">
                            <span class="tag-name">Gratitude</span>
                            <div class="tag-bar">
                                <div class="tag-bar-fill" style="width: 48%;"></div>
                            </div>
                        </div>
                        <span class="tag-count">22</span>
                    </div>
                    <div class="tag-item">
                        <div class="tag-info">
                            <span class="tag-name">Family</span>
                            <div class="tag-bar">
                                <div class="tag-bar-fill" style="width: 42%;"></div>
                            </div>
                        </div>
                        <span class="tag-count">19</span>
                    </div>
                    <div class="tag-item">
                        <div class="tag-info">
                            <span class="tag-name">Travel</span>
                            <div class="tag-bar">
                                <div class="tag-bar-fill" style="width: 30%;"></div>
                            </div>
                        </div>
                        <span class="tag-count">14</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Word Count Trend -->
        <div class="card chart-card">
            <div class="chart-header">
                <h3>Word Count Trend</h3>
                <span class="chart-subtitle">Average words over time</span>
            </div>
            <div class="chart-content">
                <div class="word-count-chart">
                    <div class="word-count-line">
                        <div class="line-point" style="left: 0%; bottom: 45%;"></div>
                        <div class="line-point" style="left: 10%; bottom: 50%;"></div>
                        <div class="line-point" style="left: 20%; bottom: 55%;"></div>
                        <div class="line-point" style="left: 30%; bottom: 52%;"></div>
                        <div class="line-point" style="left: 40%; bottom: 60%;"></div>
                        <div class="line-point" style="left: 50%; bottom: 65%;"></div>
                        <div class="line-point" style="left: 60%; bottom: 62%;"></div>
                        <div class="line-point" style="left: 70%; bottom: 70%;"></div>
                        <div class="line-point" style="left: 80%; bottom: 75%;"></div>
                        <div class="line-point" style="left: 90%; bottom: 72%;"></div>
                        <div class="line-point" style="left: 100%; bottom: 80%;"></div>
                    </div>
                    <div class="word-count-labels">
                        <span>Jan</span>
                        <span>Feb</span>
                        <span>Mar</span>
                        <span>Apr</span>
                        <span>May</span>
                        <span>Jun</span>
                        <span>Jul</span>
                        <span>Aug</span>
                        <span>Sep</span>
                        <span>Oct</span>
                        <span>Nov</span>
                        <span>Dec</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Insights Section -->
    <div class="insights-section">
        <h2 class="section-title">Key Insights</h2>
        <div class="insights-grid">
            <div class="insight-card">
                <div class="insight-icon positive">↑</div>
                <div class="insight-content">
                    <h4>Writing Consistency Improved</h4>
                    <p>You've maintained a 7-day streak! Your consistency has increased by 45% this month.</p>
                </div>
            </div>
            <div class="insight-card">
                <div class="insight-icon positive">↑</div>
                <div class="insight-content">
                    <h4>Positive Mood Trend</h4>
                    <p>85% of your entries show positive or calm moods. You're doing great!</p>
                </div>
            </div>
            <div class="insight-card">
                <div class="insight-icon neutral">→</div>
                <div class="insight-content">
                    <h4>Most Active Time</h4>
                    <p>You journal most frequently in the evening between 8-10 PM.</p>
                </div>
            </div>
            <div class="insight-card">
                <div class="insight-icon positive">↑</div>
                <div class="insight-content">
                    <h4>Word Count Growing</h4>
                    <p>Your average entry length has increased by 32 words over the last month.</p>
                </div>
            </div>
        </div>
    </div>
</div>