@page "/entry/{EntryId:int}"

@if (!isAuthorized)
{
    <p>Redirecting...</p>
}
else if (isLoading)
{
    <div class="loading-container">
        <div class="loading-spinner"></div>
        <p>Loading entry...</p>
    </div>
}
else if (entry == null)
{
    <div class="page-content">
        <div class="error-container">
            <svg class="error-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
            <h2>Entry Not Found</h2>
            <p>The journal entry you're looking for doesn't exist or has been deleted.</p>
            <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/timeline")'>
                <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
                Back to Timeline
            </button>
        </div>
    </div>
}
else
{
    <div class="page-content">
        <div class="page-header">
            <div class="header-left">
                <button class="back-btn" @onclick='() => Navigation.NavigateTo("/timeline")'>
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                    Back to Timeline
                </button>
                <h1>@(string.IsNullOrEmpty(entry.Title) ? "Untitled Entry" : entry.Title)</h1>
                <p class="page-subtitle">
                    <svg class="subtitle-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                    @entry.CreatedDate.ToLocalTime().ToString("dddd, MMMM d, yyyy") at @entry.FormattedTime
                </p>
            </div>
            <div class="header-actions">
                <button class="btn btn-secondary" @onclick="ExportAsPdf">
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14 2 14 8 20 8"></polyline>
                        <line x1="12" y1="18" x2="12" y2="12"></line>
                        <line x1="9" y1="15" x2="15" y2="15"></line>
                    </svg>
                    Export as PDF
                </button>
                @if (IsToday(entry.CreatedDate))
                {
                    <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/today")'>
                        <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                        </svg>
                        Edit Entry
                    </button>
                    <button class="btn btn-danger" @onclick="DeleteEntry">
                        <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="3 6 5 6 21 6"></polyline>
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                        </svg>
                        Delete
                    </button>
                }
            </div>
        </div>

        <div class="entry-view-layout">
            <!-- Main Content -->
            <div class="entry-main">
                <div class="entry-card">
                    <!-- Mood Section -->
                    <div class="mood-section">
                        <div class="mood-label">How I was feeling</div>
                        <div class="mood-badges">
                            <span class="mood-badge primary">
                                <svg class="mood-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    @((MarkupString)GetMoodIconPath(entry.PrimaryMood))
                                </svg>
                                @FormatMoodName(entry.PrimaryMood)
                            </span>
                            @if (!string.IsNullOrEmpty(entry.SecondaryMood1))
                            {
                                <span class="mood-badge secondary">@FormatMoodName(entry.SecondaryMood1)</span>
                            }
                            @if (!string.IsNullOrEmpty(entry.SecondaryMood2))
                            {
                                <span class="mood-badge secondary">@FormatMoodName(entry.SecondaryMood2)</span>
                            }
                        </div>
                    </div>

                    <!-- Content Section -->
                    <div class="content-section">
                        <div class="content-label">Journal Entry</div>
                        <div class="entry-content-body">
                            @((MarkupString)entry.Content)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <aside class="entry-sidebar">
                <!-- Stats Card -->
                <div class="sidebar-card">
                    <div class="sidebar-card-header">
                        <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                            <polyline points="14 2 14 8 20 8"></polyline>
                            <line x1="16" y1="13" x2="8" y2="13"></line>
                            <line x1="16" y1="17" x2="8" y2="17"></line>
                            <polyline points="10 9 9 9 8 9"></polyline>
                        </svg>
                        <span>Entry Statistics</span>
                    </div>
                    <div class="stats-grid">
                        <div class="stat-item">
                            <span class="stat-value">@entry.WordCount</span>
                            <span class="stat-label">Words</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value">@entry.Content.Length</span>
                            <span class="stat-label">Characters</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value">@GetReadingTime()</span>
                            <span class="stat-label">Min Read</span>
                        </div>
                    </div>
                </div>

                <!-- Category Card -->
                @if (!string.IsNullOrEmpty(entry.CategoryName))
                {
                    <div class="sidebar-card">
                        <div class="sidebar-card-header">
                            <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
                            </svg>
                            <span>Category</span>
                        </div>
                        <div class="category-badge">
                            <svg class="category-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
                            </svg>
                            @entry.CategoryName
                        </div>
                    </div>
                }

                <!-- Tags Card -->
                @if (entry.TagNames.Count > 0)
                {
                    <div class="sidebar-card">
                        <div class="sidebar-card-header">
                            <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                                <line x1="7" y1="7" x2="7.01" y2="7"></line>
                            </svg>
                            <span>Tags</span>
                        </div>
                        <div class="tags-list">
                            @foreach (var tag in entry.TagNames)
                            {
                                <span class="tag-badge">@tag</span>
                            }
                        </div>
                    </div>
                }

                <!-- Timestamps Card -->
                <div class="sidebar-card">
                    <div class="sidebar-card-header">
                        <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                        <span>Timestamps</span>
                    </div>
                    <div class="timestamp-list">
                        <div class="timestamp-item">
                            <span class="timestamp-label">Created</span>
                            <span class="timestamp-value">@entry.CreatedDate.ToLocalTime().ToString("MMM d, yyyy 'at' h:mm tt")</span>
                        </div>
                        @if (entry.IsModified)
                        {
                            <div class="timestamp-item">
                                <span class="timestamp-label">Last Modified</span>
                                <span class="timestamp-value">@entry.ModifiedDate!.Value.ToLocalTime().ToString("MMM d, yyyy 'at' h:mm tt")</span>
                            </div>
                        }
                    </div>
                </div>
            </aside>
        </div>
    </div>
}